<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <com.example.natali.productcalculator.widget.SwitchButton
        android:id="@+id/switchButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:textColor="@color/switch_textcolor_selector"
        app:sw_checkedColor="@color/green"
        app:sw_strokeColor="@color/green"
        app:sw_switchCount="2"
        app:sw_textArray="@array/test" >

    </com.example.natali.productcalculator.widget.SwitchButton>

    <LinearLayout
        android:id="@+id/llsecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textFormats"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="Формат" />


        <Spinner
            android:id="@+id/formatCutawace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/cutWihgtFormat"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="number"
            android:lineSpacingExtra="10sp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewX"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="x"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/cutHighFormat"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/swCutSvoyFormat"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:checked="false"
            android:text="Другой размер" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llParamsPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPrint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/printText" />

                <Spinner
                    android:id="@+id/spinnerPrint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textColoration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/colorationText" />

                <Spinner
                    android:id="@+id/spinnerColoration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPaper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/paperText" />

                <Spinner
                    android:id="@+id/spinnerPaper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>